<%- include('../header') %>

    <div class="page-wrapper">
        <div class="container-fluid py-5">

            <!-- Page Title -->
            <div class="row mb-4">
                <div class="col-12 d-flex justify-content-between align-items-center">
                    <h4 class="page-title">Product List</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Products</li>
                        </ol>
                    </nav>
                </div>
            </div>

            <!-- Product Cards (Amazon Style) -->
            <div class="row g-4">
                <% allProduct.map((val)=> { %>
                    <div class="col-sm-6 col-md-4 col-lg-3 d-flex">
                        <div class="card shadow-sm border rounded-3 h-100">

                            <!-- Product Image -->
                            <div class="d-flex justify-content-center align-items-center"
                                style="height: 220px; overflow: hidden;">
                                <img src="/uploads/productImage/<%= val.productImage %>" 
                                    style="max-height: 100%; object-fit: contain;" alt="<%= val.productName %>">
                            </div>

                            <!-- Product Details -->
                            <div class="card-body d-flex flex-column p-3">

                                <!-- Product Name -->
                                <h6 class="card-title text-dark fw-bold mb-2"
                                    style="font-size: 1.1rem; font-weight: 600; line-height:1.4;">
                                    <%= val.productName %>
                                </h6>

                                <!-- Price -->
                                <span class="text-success fw-bold mb-2" style="font-size: 1.05rem; font-weight: 700;">
                                    $<%= val.price %>
                                </span>

                                <!-- Description -->
                                <p class="card-text text-secondary flex-grow-1 mb-2"
                                    style="font-size:0.95rem; font-weight:500; line-height:1.4;">
                                    <%= val.description.length> 90 ? val.description.substring(0, 90) + "..." :
                                        val.description %>
                                </p>

                                <!-- Quantity -->
                                <span class="text-muted mb-3" style="font-size:0.9rem; font-weight: 600;">
                                    Quantity: <%= val.quantity %>
                                </span>

                                <!-- Buttons -->
                                <div class="d-flex mt-auto">
                                    <a href="/product/viewSingleProductPage/<%= val._id %>"
                                        class="btn btn-sm btn-outline-primary flex-fill me-2 fw-bold">
                                        View
                                    </a>
                                    <a href="/product/editProductPage/<%= val._id %>"
                                        class="btn btn-sm btn-outline-warning flex-fill me-2 fw-bold text-dark">
                                        Edit
                                    </a>
                                    <a href="/product/deleteProduct/<%= val._id %>"
                                        class="btn btn-sm btn-outline-danger flex-fill fw-bold">
                                        Delete
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                    <% }) %>
            </div>

        </div>
    </div>

    <%- include('../footer') %>