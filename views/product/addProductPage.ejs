        document.addEventListener('DOMContentLoaded',()=>{
            let category = document.querySelector('#category');
            let subcategory = document.querySelector('#subcategory')
            let extraCategory = document.querySelector('#extraCategory')

            category.addEventListener('change',() =>{
                let categoryId = category.value;
                // console.log("categoryId : " , categoryId);
                subcategory.innerHTML = `<option>---- Select Subcategory ----</option>`;
                fetch(`/product/subcategory?category=${categoryId}`)
                .then(res => res.json())
                .then(data => {
                    console.log(data.subcategories)
                    data.subcategories.forEach(value=> {
                        let option = document.createElement('option')
                        option.value = value._id;
                        option.innerHTML = value.subcategory;
                        subcategory.append(option)
                    });
                })
                .catch(err => console.log(err));
            }) 

            subcategory.addEventListener('change' , ()=>{
                let subcategoryId = subcategory.value;
                console.log(subcategoryId);
                extraCategory.innerHTML = `<option>---- Select ExtraCategory ----</option>`
                fetch(`/product/extraCategory?subcategory=${subcategoryId}`)
                .then(res  => res.json())
                .then(data => {
                    // console.log(data.extraCategories)
                    data.extraCategories.forEach(value =>{
                        let option = document.createElement('option')
                        option.value = value._id;
                        option.innerHTML = value.extraCategory;
                        extraCategory.append(option)
                    })
                })
            })
        })
    </script>