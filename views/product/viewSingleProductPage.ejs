<%- include('../header') %>

<div class="page-wrapper">
  <div class="container-fluid py-5">

    <!-- Back button -->
    <div class="mb-4">
      <a href="/product/viewProductPage" class="btn btn-outline-primary btn-sm">
        ‚Üê Back to Products
      </a>
    </div>

    <div class="row g-4 justify-content-center">

      <!-- Left: Product Image -->
      <div class="col-lg-5 col-md-6 col-sm-12">
        <div class="card border-0 shadow-sm rounded-4">
          <img src="/uploads/productImage/<%= single.productImage %>" 
               class="img-fluid rounded-4"
               style="max-height: 100%; object-fit: contain; width:100%;"
               alt="<%= single.productName %>">
        </div>
      </div>

      <!-- Right: Product Details -->
      <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="card border-0 shadow-sm rounded-4 p-4 h-100">

          <!-- Title -->
          <h3 class="fw-bold text-dark mb-3"><%= single.productName %></h3>

          <!-- Price -->
          <h4 class="text-success fw-bold mb-3">$<%= single.price %></h4>

          <!-- Description -->
          <p class="text-muted mb-4" style="line-height:1.7;">
            <%= single.description %>
          </p>

          <!-- Product Info Table -->
          <table class="table table-borderless mb-4">
            <tbody>
              <tr>
                <th class="text-secondary">Quantity:</th>
                <td><%= single.quantity %></td>
              </tr>
              <tr>
                <th class="text-secondary">Category:</th>
                <td><%= single.category.title %></td>
              </tr>
              <tr>
                <th class="text-secondary">Sub Category:</th>
                <td><%= single.subcategory.subcategory %></td>
              </tr>
              <tr>
                <th class="text-secondary">Extra Category:</th>
                <td><%= single.extraCategory.extraCategory %></td>
              </tr>
            </tbody>
          </table>

          <!-- Actions -->
          <div class="d-flex gap-3">
            <a href="/product/edit/<%= single._id %>" class="btn btn-warning px-4">
              <i class="bi bi-pencil-square me-1"></i> Edit
            </a>
            <a href="/product/delete/<%= single._id %>" 
               class="btn btn-danger px-4"
               onclick="return confirm('Are you sure you want to delete this product?');">
              <i class="bi bi-trash me-1"></i> Delete
            </a>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>

<%- include('../footer') %>
