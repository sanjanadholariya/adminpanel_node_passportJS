<%- include("header") %>

<div class="page-wrapper">
  <!-- Breadcrumb -->
  <div class="page-breadcrumb bg-white shadow-sm mb-4 rounded">
    <div class="row align-items-center p-3">
      <div class="col-6 d-flex align-items-center">
        <% if(locals.user.profile){ %>
          <img src="/uploads/<%= locals.user.profile %>" 
               alt="profile pic" 
               class="rounded-circle shadow-sm mr-2"
               width="40" height="40" 
               style="object-fit: cover;">
        <% } else { %>
          <img src="https://via.placeholder.com/40" 
               alt="profile pic" 
               class="rounded-circle shadow-sm mr-2">
        <% } %>
        <h4 class="page-title text-primary mb-0">My Profile</h4>
      </div>
      <div class="col-6 text-right">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb mb-0 bg-transparent p-0">
            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Profile</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>

  <!-- Profile Content -->
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10">
        <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
          
          <!-- Profile Header (background only for top area) -->
          <div class="bg-gradient-primary text-center py-4">
            <% if(locals.user.profile){ %>
              <img src="/uploads/<%= locals.user.profile %>" 
                   alt="profile pic" 
                   class="rounded-circle border border-4 border-white shadow-lg"
                   width="130" height="130" 
                   style="object-fit: cover;">
            <% } else { %>
              <img src="https://via.placeholder.com/130" 
                   alt="profile pic" 
                   class="rounded-circle border border-4 border-white shadow-lg">
            <% } %>
          </div>

<div class="d-flex justify-content-between align-items-center px-4">
  <h3 class="fw-bold mb-0 text-dark"><%= locals.user.name %></h3>
  <p class="mb-0 text-dark">
    <i class="fa fa-envelope"></i> <%= locals.user.email %>
  </p>
</div>


          <!-- Profile Details -->
          <div class="card-body bg-light">
            <div class="row g-4 text-center">
              <div class="col-md-6">
                <div class="p-3 bg-white rounded shadow-sm h-100">
                  <h6 class="text-muted">Gender</h6>
                  <p class="fw-bold text-dark mb-0"><%= locals.user.gender %></p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="p-3 bg-white rounded shadow-sm h-100">
                  <h6 class="text-muted">City</h6>
                  <p class="fw-bold text-dark mb-0"><%= locals.user.city %></p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="p-3 bg-white rounded shadow-sm h-100">
                  <h6 class="text-muted">Qualification</h6>
                  <p class="fw-bold text-dark mb-0">
                    <% if(Array.isArray(locals.user.qualification)){ %>
                      <%= locals.user.qualification.join(", ") %>
                    <% } else { %>
                      <%= locals.user.qualification %>
                    <% } %>
                  </p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="p-3 bg-white rounded shadow-sm h-100">
                  <h6 class="text-muted">Message</h6>
                  <p class="fw-bold text-dark mb-0"><%= locals.user.message %></p>
                </div>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="card-footer text-center bg-white">
            <a href="/admin" class="btn btn-outline-secondary shadow-sm">
              <i class="fa fa-arrow-left"></i> Back
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("footer") %>
